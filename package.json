{
    "private": true,
    "workspaces": [
        "apps/*",
        "libs/*"
    ],
    "scripts": {
        "fix": "gts fix",
        "build": "bun run --cwd apps/web build && bun run --cwd apps/api build && bun run --cwd libs/client build",
        "build:web": "bun run --cwd apps/web build",
        "build:api": "bun run --cwd apps/api build",
        "build:client": "bun run --cwd libs/client build",
        "dev:web": "bun run --cwd apps/web dev",
        "dev:api": "bun run --cwd apps/api start:dev",
        "clean": "rm -rf node_modules **/node_modules **/dist bun.lockb"
    },
    "engines": {
        "bun": ">=1.0.0"
    },
    "devDependencies": {
        "@types/node": "22.12.0",
        "@typescript-eslint/eslint-plugin": "8.22.0",
        "babel-eslint": "10.1.0",
        "eslint-config-react-app": "7.0.1",
        "eslint-plugin-flowtype": "8.0.3",
        "eslint-plugin-import": "2.31.0",
        "eslint-plugin-jsx-a11y": "6.10.2",
        "eslint-plugin-node": "11.1.0",
        "eslint-plugin-prettier": "5.2.3",
        "eslint-plugin-react": "7.37.4",
        "eslint-plugin-react-hooks": "5.1.0",
        "gts": "6.0.2",
        "tsconfig-paths-webpack-plugin": "4.2.0",
        "typescript": "5.7.3"
    }
}